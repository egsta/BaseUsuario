@using BaseUsuario.ViewModels
@model LoginViewModels

@{
    ViewBag.Title = "Acceso al sistema";
}

<div class=container>
    <h1>Bienvenido para alquilar necesita Iniciar Sesión</h1>



    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Login" asp-action="Login" method="post">

                <div class="form-group">
                    @Html.LabelFor(x => x.UserName)
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "label label-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    <input type="password" name="Password" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Password, null, new { @class = "label label-danger" })
                </div>

                <div class="text-right">
                    <input type="submit" value="Iniciar Sesion" class="btn btn-primary" />
                </div>
            </form>

        </div>
        @if (ViewBag.Message != null)
        {
            <br />
            <div class="alert alert-danger">

                @ViewBag.Message

            </div>
        }
    </div>

</div>